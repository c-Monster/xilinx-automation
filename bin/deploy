#!/usr/bin/expect

# bitfile to deploy
set bit [lindex $argv 0];

# colors
set red "\033\[1;31m"
set green "\033\[0;32m"
set clr "\033\[0m"

# spawn xmd shell
spawn "/opt/Xilinx/14.4/ISE_DS/EDK/bin/lin64/xmd" 
expect "XMD%" { send "" }
expect "XMD%" { send "fpga -f $bit\r" }
expect { "*ERROR*" {
            puts stderr "\t${red}failed to deploy ${bit}${clr}\n"
            exit 2
                   }
         "XMD%" { send "exit\r" }
       }

puts stderr "\t${green}successfully deployed ${bit}${clr}\n"



